<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="searchViewModel"
            type="com.example.hyundaiandroidproject.views.search.SearchViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvActivitySearchMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@{searchViewModel.isErrorMessage()}"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/githubBlack"
        android:visibility="@{searchViewModel.isError() ? View.VISIBLE : View.GONE}"
        app:layout_constraintBottom_toBottomOf="@+id/rvActivitySearchList"
        app:layout_constraintEnd_toEndOf="@+id/rvActivitySearchList"
        app:layout_constraintStart_toStartOf="@+id/rvActivitySearchList"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pbActivitySearch"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="@{searchViewModel.isLoading() ? View.VISIBLE : View.GONE}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvActivitySearchList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:endlessScroll="@{searchViewModel}"
        bind:setItems="@{searchViewModel.movieList}"
        tools:listitem="@layout/item_repository"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>